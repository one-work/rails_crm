

  <td>
    <div data-show-target="item" class="visibility-hidden">
      <%= link_to({ controller: 'notes', maintain_id: model.id }, aria: { label: t('.notes.index.title') }, class: 'button is-small is-borderless') do %>
        <i class="fa-solid fa-clock text-primary"></i>
      <% end %>
      <%= button_to({ action: 'show', id: model.id }, aria: { label: t('.show.title') }, class: 'button is-small is-borderless') do %>
        <%= svg_tag 'circle-info', class: 'icon text-info' %>
      <% end %>
      <%= button_to({ action: 'edit', id: model.id }, aria: { label: t('.edit.title') }, class: 'button is-small is-borderless') do %>
        <%= svg_tag 'pencil', class: 'icon text-link' %>
      <% end %>
      <%= button_to({ action: 'destroy', id: model.id }, method: :delete, aria: { label: t('.destroy.title') }, class: 'button is-small is-borderless', form: { data: { turbo_confirm: t('.destroy.confirm') } }) do %>
        <%= svg_tag 'trash', class: 'icon text-danger' %>
      <% end %>
    </div>
    <div data-show-target="item" class="mt-2 visibility-hidden">
      <%= link_to({ controller: 'orders', maintain_id: model.id }, aria: { label: t('.orders.index.title') }, class: 'button is-small is-borderless') do %>
        <i class="fa-solid fa-shopping-cart text-primary"></i>
      <% end %>
      <%= link_to({ controller: 'addresses', maintain_id: model.id }, aria: { label: t('.addresses.index.title') }, class: 'button is-small is-borderless') do %>
        <i class="fa-solid fa-location-dot"></i>
      <% end %>
      <%= link_to({ controller: 'wallets', maintain_id: model.id }, aria: { label: t('.wallets.index.title') }, class: 'button is-small is-borderless') do %>
        <i class="fa-solid fa-wallet"></i>
      <% end %>
      <%= link_to({ controller: 'cards', maintain_id: model.id }, aria: { label: t('.cards.index.title') }, class: 'button is-small is-borderless') do %>
        <i class="fa-solid fa-credit-card"></i>
      <% end %>
      <%= link_to({ controller: 'productions', maintain_id: model.id }, aria: { label: t('.productions.index.title') }, class: 'button is-small is-borderless') do %>
        <i class="fa-solid fa-store"></i>
      <% end %>
    </div>
  </td>

