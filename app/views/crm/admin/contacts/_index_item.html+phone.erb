<p>
  <div class="is-several">
    <%= image_tag model.avatar, class: 'image is-32x32' if model.avatar.attached? %>
    <span><%= model.name %></span>
  </div>
</p>
<% if model.identity %>
  <p><%= model.identity %></p>
<% else %>
  <p class="text-grey"><time data-controller="time" data-format="human"><%= model.created_at.to_fs(:iso8601) %></time></p>
<% end %>