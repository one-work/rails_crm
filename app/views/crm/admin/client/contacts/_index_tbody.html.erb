<td>
  <p><%= link_to model.identity, { action: 'show', id: model.id } %></p>
  <p><span><%= model.name %></span></p>
</td>
<td>
<% if model.client_member_id %>
  <span class="tag is-success"><%= 'linked' %></span>
<% else %>
  <%= button_to({ action: 'edit_member', id: model.id }, class: 'button is-small is-link mb-1') do %>
    <%= svg_tag 'plus' %>
    <span class="ml-1"><%= t('.edit_member.title') %></span>
  <% end %>
<% end %>
</td>
<td>
  <%= form_with theme: 'switch', model: model, url: { action: 'update_default', id: model.id }, data: { controller: 'input' } do |f| %>
    <%= f.check_box :default, data: { action: 'input#submit' }, id: nil %>
  <% end %>
</td>
