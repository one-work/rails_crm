<td><%= check_box_tag 'xx', model.id, false, id: nil %></td>
<td>
  <p><%= link_to model.name, { action: 'show', id: model.id } %></p>
</td>
<td>
<% if model.client_organ %>
  <span><%= model.client_organ.name %></span>
  <span class="tag is-success">Linked</span>
<% else %>
  <%= button_to({ action: 'edit_organ', id: model.id }, class: 'button is-small is-link mb-1') do %>
    <%= svg_tag 'plus' %>
    <span class="ml-1"><%= t('.edit_organ.title') %></span>
  <% end %>
<% end %>
</td>
<% if defined? RailsFactory %>
  <td>
    <%= form_with theme: 'switch', model: model, url: { action: 'update', id: model.id }, data: { controller: 'input' } do |f| %>
      <%= f.check_box :vendor, data: { action: 'input#submit' }, id: nil %>
    <% end %>
  </td>
<% end %>
